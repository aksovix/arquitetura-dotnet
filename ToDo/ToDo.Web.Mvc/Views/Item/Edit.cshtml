@model ToDo.Application.Dtos.Item.UpdateItemRequestDto


@{
    ViewData["Title"] = "Alterar item";
}



<div class="col-md-4">
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" id="id" name="Id" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Nome da tarefa</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Done" class="control-label">Feita?</label>
            <input asp-for="Done" class="chk" type="checkbox" />
            <span asp-validation-for="Done" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Alterar tarefa" action="Update" class="btn btn-primary" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Voltar</a>
</div>
